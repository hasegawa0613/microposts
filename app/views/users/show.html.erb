<h1>
  <%= gravatar_for @user %>
  <%= @user.name %>
</h1>

<!-- レスポンシブ対応のために div を追加 -->
<div class="table-responsive">
  <!-- テーブルにクラスを追加 -->
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>プロフィール</th>
        <th>地域</th>
        <th colspan="1"></th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @user.profile %></td>
          <td><%= @user.area %></td>
          <td><%= link_to "編集" , edit_user_path(@user)%></td>
        </tr>
    </tbody>
  </table>
</div>