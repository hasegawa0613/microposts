<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "プロフィール編集" , edit_user_path(@user)%>
      <br>
      <%= link_to "フォロー(#{@followings_list.count})",:controller => "users", :action => "followings",:id => @user.id  %>
      <%= link_to "フォロワー(#{@followers_list.count})",:controller => "users", :action => "followers",:id => @user.id %>
    </section>
    <div class="table-responsive">
  <!-- テーブルにクラスを追加 -->
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>プロフィール</th>
        <th>地域</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @user.profile %></td>
          <td><%= @user.area %></td>
        </tr>
    </tbody>
  </table>
</div>
  </aside>
  <div class="col-md-8">
    <%= render 'follow_form' if logged_in? %>
    <% if @user.microposts.any? %>
      <h3>Microposts (<%= @user.microposts.count %>)</h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
    <% end %>
  </div>
</div>