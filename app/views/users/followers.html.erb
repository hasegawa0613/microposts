<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
    </section>
  </aside>
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>フォロー一覧</h3>
      <ol class="microposts">
         <li>
            <span class="label label-info">name</span>
            <%= followers.name %>
            <span class="label label-info">profile</span>
            <%= followers.profile %>
            <span class="label label-info">area</span>
            <%= followers.area %>
            <br>
        </li>
          <% end %>
      </ol>
  </div>
</div>