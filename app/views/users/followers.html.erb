<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %>
      </h1>
      <%= link_to "フォロー(#{@followings_list.count})",:controller => "users", :action => "followings",:id => @user.id  %>
      <%= link_to "フォロワー(#{@followers_list.count})",:controller => "users", :action => "followers",:id => @user.id %>
    </section>
    <!-- テーブルにクラスを追加 -->
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th>プロフィール</th>
        <th>地域</th>
      </tr>
    </thead>
    <tbody>
        <tr>
          <td><%= @user.profile %></td>
          <td><%= @user.area %></td>
        </tr>
    </tbody>
  </table>
  </aside>
  <div class="col-md-8">
      <h3>フォロアー一覧</h3>
      <ol class="microposts">
         <% @followers_list.each do |followers| %>
         <li>
            <span class="label label-info">name</span>
            <%= followers.name %>
            <span class="label label-info">profile</span>
            <%= followers.profile %>
            <span class="label label-info">area</span>
            <%= followers.area %>
            <br>
        </li>
          <% end %>
      </ol>
  </div>
</div>